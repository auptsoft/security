                <android.support.v7.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="140dp"
                    app:cardBackgroundColor="#888"
                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
